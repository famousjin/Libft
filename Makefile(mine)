NAME = libft.a

CC = gcc
CFLAG = -Wall -Wextra -Werror
RM = rm -f
AR = ar
ARFLAGS = crs
RN = ranlib

INCLUDES = ./libft.h

SRCS = ft_atoi.c \
	ft_bzero.c \
	ft_calloc.c \
	ft_isalnum.c \
	ft_isalpha.c \
	ft_isascii.c \
	ft_isdigit.c \
	ft_isprint.c \
	ft_memchr.c \
	ft_memcmp.c \
	ft_memcpy.c \
	ft_memmove.c \
	ft_memset.c \
	ft_strchr.c \
	ft_strdup.c \
	ft_strlcat.c \
	ft_strlcpy.c \
	ft_strlen.c \
	ft_strncmp.c \
	ft_strnstr.c \
	ft_strrchr.c \
	ft_tolowe.c \
	ft_toupper.c \
	ft_itoa.c \
	ft_putchar_fd.c \
	ft_putendl_fd.c \
	ft_putnbr_fd.c \
	ft_putstr_fd.c \
	ft_split.c \
	ft_striteri.c \
	ft_strjoin.c \
	ft_strmapi.c \
	ft_strtrim.c \
	ft_substr.c \

B_SRC = ft_ft_lstadd_back.c \
	ft_lstadd_front.c \
	ft_lstclear.c \
	ft_lstdelone.c \
	ft_lstiter.c \
	ft_lstlast.c \
	ft_lstmap.c \
	ft_lstnew.c \
	ft_lstsize.c \

SRCS = $(addsuffix .c, ${SRC})

B_SRCS = $(addsuffix _bonus.c, ${B_SRC})

HEAD = ./includes/

OBJS = ${SRCS:.c=.0}

B_OBJS = ${B_SRCS:.c=.o}

.c.o:
	${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

$(NAME):	${OBJS}
				${AR} ${NAME} ${OBJS}
				${RN} ${NAME}

bonus:	${B_OBJS}
				${AR} ${NAME} ${B_OBJS}
				${RN} ${NAME}

all:	$(NAME)

clean:
				${RM} ${NAME} ${B_OBJS}

fclean:	clean
				${RM} $(NAME)

re:	fclean all

.PHONY:	all bonus clean fclean re
